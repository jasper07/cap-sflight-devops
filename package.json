{
  "name": "@capire/sflight",
  "version": "1.0.0",
  "private": true,
  "description": "CAP flight demo scenario",
  "license": "SAP SAMPLE CODE LICENSE",
  "repository": "https://github.com/SAP-samples/cap-sflight",
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "lint": "npx eslint .",
    "start": "cds run",
    "sast": "echo 'add SAST and SCA checks later'",
    "test": "jest test/odata.test.js",
    "test:ci": "npm run test -- --watchAll=false --reporters=default --reporters=jest-junit --coverage --coverageReporters=cobertura",
    "test:mocha": "npx mocha --timeout 20000",
    "test:wdi5:dev": "wdio run ./wdio.conf.js --debug",
    "test:wdi5:headless": "wdio run ./wdio.conf.js --headless",
    "travel-processor": "cds watch --open travel_processor/webapp/index.html?sap-ui-xx-viewCache=false",
    "travel-analytics": "cds watch --open travel_analytics/webapp/index.html?sap-ui-xx-viewCache=false",
    "build:cf:node": "cp mta-node.yaml mta.yaml && mbt build && rm mta.yaml",
    "build:cf:java": "cp mta-java.yaml mta.yaml && mbt build && rm mta.yaml",
    "build:cf:sqlite": "cp mta-sqlite.yaml mta.yaml && mbt build && rm mta.yaml",
    "wdi5": "wdio run ./wdio.conf.js"
  },
  "dependencies": {
    "@sap/cds": ">=6.7.0",
    "@sap/xssec": "^3.2.7",
    "express": "^4",
    "hdb": "^0.19.1",
    "mbt": "^1.2.23",
    "passport": "^0.6.0",
    "sqlite3": "^5"
  },
  "devDependencies": {
    "@sap/ux-specification": "UI5-1.108",
    "@wdio/cli": "^7.31.1",
    "@wdio/local-runner": "^7.31.1",
    "@wdio/mocha-framework": "^7.30.2",
    "@wdio/spec-reporter": "^7.31.1",
    "axios": "^1",
    "chai": "^4.3.0",
    "chai-as-promised": "^7.1.1",
    "chai-subset": "^1.6.0",
    "cross-spawn": "^7.0.3",
    "http-proxy": "^1.18.1",
    "jest": "^29.0.2",
    "jest-junit": "^16.0.0",
    "qunit": "^2.9.3",
    "wdio-chromedriver-service": "^8.1.1",
    "wdio-ui5-service": "^1.3.3"
  },
  "cds": {
    "requires": {
      "db": {
        "kind": "sql"
      },
      "[production]": {
        "db": {
          "kind": "sqlite",
          "model": "*",
          "credentials": {
            "database": "sqlite.db"
          }
        },
        "auth": {
          "kind": "xsuaa"
        }
      },
      "[development]": {
        "auth": {
          "kind": "mocked-auth",
          "users": {
            "rose": {
              "roles": []
            },
            "martha": {
              "roles": [
                "reviewer"
              ]
            },
            "amy": {
              "roles": [
                "processor"
              ]
            },
            "admin": {
              "password": "admin",
              "roles": [
                "admin"
              ]
            }
          }
        }
      }
    },
    "log": {
      "service": true
    },
    "features": {
      "odata_new_parser": true
    },
    "build": {
      "[node]": {
        "target": "gen",
        "tasks": [
          {
            "for": "node-cf"
          },
          {
            "for": "hana"
          }
        ]
      },
      "[java]": {
        "target": ".",
        "tasks": [
          {
            "for": "java-cf"
          }
        ]
      },
      "[hana]": {
        "target": "gen",
        "tasks": [
          {
            "for": "hana"
          }
        ]
      }
    }
  },
  "jest": {
    "testEnvironment": "node",
    "testTimeout": 20000,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./srv/**"
    ],
    "coverageDirectory": "./test-results/coverage",
    "coverageThreshold": {
      "global": {
        "lines": 69,
        "functions": 59,
        "statements": -54
      }
    }
  },
  "jest-junit": {
    "suiteNameTemplate": "{filepath}",
    "outputDirectory": "./test-results/junit",
    "outputName": "TEST-cap_server.xml"
  },
  "sapux": [
    "app/travel_processor",
    "app/travel_analytics"
  ]
}
